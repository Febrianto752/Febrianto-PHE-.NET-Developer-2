@model SupplyManagementSystem.Models.Vendor
@{
    ViewBag.Title = "Details";
}

<div class="row justify-content-center mb-5">
    <div class="col-sm-8 ">
        @Html.ActionLink("<< Back", "Index", "Vendor", null, new {@class = "btn btn-sm btn-info mb-3" })
 
        @Html.Partial("_FlashMessage")
        <div class="card p-4 shadow-lg rounded">
            <div class="card-body text-center">
                <h3 class="card-title mb-5 text-center">@Model.Account.Name</h3>

                <img src="/Static/Images/@Model.ProfileImage" alt="company" class="mb-5" style="width: 200px; height:200px;" />


                <table class="text-start mx-auto">
                    <tr>
                        <td>Jenis Perusahaan</td>
                        <td class="px-2"> : </td>
                        <td>@(string.IsNullOrEmpty(Model.TypeCompany) ? "belum diisi" : Model.TypeCompany)</td>
                    </tr>
                    <tr>
                        <td>Bindang Usaha</td>
                        <td class="px-2"> : </td>
                        <td>@(string.IsNullOrEmpty(Model.BusinessField) ? "belum diisi" : Model.BusinessField)</td>
                    </tr>
                    <tr>
                        <td>Email</td>
                        <td class="px-2"> : </td>
                        <td>@Model.Account.Email</td>
                    </tr>
                    <tr>
                        <td>No Telp</td>
                        <td class="px-2"> : </td>
                        <td>@Model.Account.NoTelp</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>